{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitUseStrict": true,
    "lib": ["es6", "dom"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "scripts"]
}
